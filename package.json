{
  "name": "wsl-sync-cli",
  "version": "1.0.0",
  "description": "Terminal-based file synchronization tool for WSL",
  "main": "src/cli.js",
  "bin": {
    "wsl-sync": "src/cli.js"
  },
  "scripts": {
    "start": "node src/cli.js",
    "dev": "node --watch src/cli.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "test:bench": "vitest bench",
    "test:acceptance": "vitest test/acceptance",
    "build": "babel src -d dist",
    "link": "npm link",
    "unlink": "npm unlink",
    "docs": "jsdoc -c jsdoc.json",
    "man": "node scripts/generate-man.js"
  },
  "keywords": ["wsl", "sync", "file-sync", "cli", "terminal"],
  "author": "Frank Bria",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/frankbria/wsl-sync-cli.git"
  },
  "type": "module",
  "dependencies": {
    "@babel/cli": "^7.27.2",
    "@babel/core": "^7.27.7",
    "@babel/node": "^7.27.1",
    "@babel/preset-react": "^7.27.1",
    "chalk": "^5.4.1",
    "conf": "^14.0.0",
    "fs-extra": "^11.3.0",
    "ignore": "^7.0.5",
    "ink": "^6.0.1",
    "ink-divider": "^4.1.1",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "minimatch": "^10.0.3",
    "p-queue": "^8.1.0",
    "react": "^19.1.0",
    "xdg-basedir": "^5.1.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@vitest/ui": "^2.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "vitest": "^2.0.0",
    "memfs": "^4.0.0",
    "ink-testing-library": "^3.0.0",
    "jsdoc": "^4.0.0",
    "marked-man": "^2.0.0"
  }
}
